{
  "name": "ton",
  "version": "1.0.0",
  "description": "Sistema de reservas de tours de lanchas a las Islas Ballestas",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd packages/shared && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd apps/backend && npm run test",
    "test:frontend": "cd apps/frontend && npm run test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prisma:generate": "cd apps/backend && npx prisma generate",
    "prisma:migrate": "cd apps/backend && npx prisma migrate dev",
    "prisma:seed": "cd apps/backend && npm run prisma:seed",
    "prisma:studio": "cd apps/backend && npx prisma studio",
    "setup": "npm install && cd apps/backend && npm install && cd ../frontend && npm install && cd ../.. && npm run prisma:generate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "apps/backend/src/**/*.{ts,js}": [
      "cd apps/backend && npm run lint -- --fix",
      "git add"
    ],
    "apps/frontend/src/**/*.{ts,tsx,js,jsx}": [
      "cd apps/frontend && npm run lint -- --fix",
      "git add"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}